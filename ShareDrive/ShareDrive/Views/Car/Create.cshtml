@using ShareDrive.ViewModels.CarViewModels

@model CreateViewModel

<div id="modal-container" class="modal fade hidden-print" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="col-md-12">
                <form method="post" role="form" enctype="multipart/form-data">
                    <div class="form-group col-md-4">
                        <label asp-for="Brand" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" asp-for="Brand">
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        <label asp-for="CarModel" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" asp-for="CarModel">
                            <span asp-validation-for="CarModel" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        <label asp-for="Year" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input type="number" class="form-control" asp-for="Year">
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        <label asp-for="HasAirConditioner" class="col-md-5 control-label"></label>
                        <div class="col-md-7">
                            <input type="checkbox" asp-for="HasAirConditioner">
                            <span asp-validation-for="HasAirConditioner" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="col-md-4" asp-for="Image">Upload Picture</label>
                        <div class="col-md-8">
                            <input type="file" asp-for="Image" />
                        </div>
                    </div>

                    <div class="form-group col-md-offset-3 col-md-9">
                        <!-- Button -->
                        <div>
                            <button id="submit" type="submit" class="btn btn-info pull-right"><i class="icon-hand-right"></i>Submit</button>
                            @*<span style="margin-left:8px;">or</span>*@
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
