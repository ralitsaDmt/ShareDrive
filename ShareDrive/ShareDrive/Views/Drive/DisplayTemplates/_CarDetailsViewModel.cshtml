@model ShareDrive.ViewModels.Car.CarDetailsViewModel

<div class="col-md-12">
    <div class="panel panel-info details-panel">
        <div class="panel-body">
            <div class="col-md-5">
                <img class="img-driver" src="@Model.ImageSource" />
            </div>

            <div class="col-md-7">
                <div>
                    <label asp-for="@Model.Brand"></label>
                    <span>@Model.Brand</span>
                    <hr class="hr-details" />
                </div>

                <div>
                    <label asp-for="@Model.CarModel"></label>
                    <span>@Model.CarModel</span>
                    <hr class="hr-details" />
                </div>

                <div>
                    <label asp-for="Year"></label>
                    <span>@Model.Year</span>
                    <hr class="hr-details" />
                </div>

                <div>
                    <label asp-for="HasAirConditioner"></label>
                    <span>@Model.HasAirConditioner</span>
                    <hr class="hr-details" />
                </div>
            </div>
        </div>
    </div>
</div>

