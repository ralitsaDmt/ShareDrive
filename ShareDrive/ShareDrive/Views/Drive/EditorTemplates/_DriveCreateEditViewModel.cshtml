
@using ShareDrive.ViewModels.Drive

@model DriveCreateEditViewModel

<div class="modal-body">
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <div class="form-group">
                <label asp-for="From" class="control-label"></label>
                <input type="text" class="form-control" asp-for="From">
                <span asp-validation-for="From" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6 col-sm-6">
            <div class="form-group">
                <label asp-for="To" class="control-label"></label>
                <input type="text" class="form-control" asp-for="To">
                <span asp-validation-for="To" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-sm-6">
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <div class='input-group date' id='datepicker'>
                    <input type='text' class="form-control" asp-for="DateTime" />
                    <span class="input-group-addon">
                        <span><i class="fa fa-calendar" /></span>
                    </span>
                </div>
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-sm-6">
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input type="number" class="form-control" asp-for="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6 col-sm-6">
            <div class="form-group">
                <label asp-for="DeclaredSeats" class="control-label"></label>
                <input type="number" class="form-control" asp-for="DeclaredSeats">
                <span asp-validation-for="DeclaredSeats" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-sm-6">
            <div class="form-group">
                <label asp-for="LocationToPick" class="control-label"></label>
                <textarea asp-for="LocationToPick" rows="3" class="form-control"></textarea>
                <span asp-validation-for="LocationToPick" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6 col-sm-6">
            <div class="form-group">
                <label asp-for="LocationToArrive" class="control-label"></label>
                <textarea asp-for="LocationToArrive" rows="3" class="form-control"></textarea>
                <span asp-validation-for="LocationToArrive" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="form-group">
                <label asp-for="CarId" class="control-label"></label>
                <select asp-for="CarId" class="form-control"
                        asp-items="@(new SelectList(Model.Cars, "Id", "Name"))"></select>
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>